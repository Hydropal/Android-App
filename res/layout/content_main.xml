<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="rc16ho1.hydropal.MainActivity"
    tools:showIn="@layout/activity_main">



    <TextView
        android:text="Something ml"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="155dp"
        android:id="@+id/Drinkinput"


        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"/>

    <TextView

        android:text="of 2000ml"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/WaterGoal"
        android:layout_below="@+id/Drinkinput"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:textSize="18sp"
        android:textColor="#FFFFFF"/>

    <RelativeLayout
        android:layout_height="165dp"
        android:background="#25272B"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <TextView
            android:text="3 Days Ago"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="40dp"
            android:textSize="14sp"

            android:id="@+id/threedays" />

        <TextView
            android:text="2 Days Ago"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="40dp"
            android:layout_toRightOf="@id/threedays"
            android:layout_alignParentTop="true"
            android:textSize="14sp"

            android:id="@+id/twodays" />

        <TextView
            android:text="Yesterday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="40dp"
            android:layout_toRightOf="@id/twodays"
            android:layout_alignParentTop="true"
            android:textSize="14sp"

            android:id="@+id/oneday" />

        <TextView
            android:text="2000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="51.5dp"
            android:layout_below="@id/threedays"
            android:layout_alignParentTop="true"
            android:textSize="18sp"

            android:id="@+id/threedaydrink" />

        <TextView
            android:text="2100"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="75dp"
            android:layout_toRightOf="@id/threedaydrink"
            android:layout_alignParentTop="true"
            android:textSize="18sp"

            android:id="@+id/twodaydrink" />

        <TextView
            android:text="2100"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="66dp"
            android:layout_toRightOf="@id/twodaydrink"
            android:layout_alignParentTop="true"
            android:textSize="18sp"

            android:id="@+id/onedaydrink" />





    </RelativeLayout>

</RelativeLayout>
